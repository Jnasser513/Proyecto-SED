<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#1E1B30"
    android:padding="@dimen/maximum_gap">

    <ImageView
        android:id="@+id/register_return_arrow"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/description_arrow_return" />

    <TextView
        android:id="@+id/register_text_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_gap"
        android:text="@string/register_text_tittle"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_return_arrow"/>

    <TextView
        android:id="@+id/register_description_tittle_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        android:text="@string/register_description_tittle_text"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="#787575"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_text_tittle"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_input_layout_name"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:hint="@string/hint_input_name"
        android:textColorHint="#787575"
        android:layout_marginTop="@dimen/maximum_gap"
        app:boxCornerRadiusTopEnd="@dimen/radius_input"
        app:boxCornerRadiusTopStart="@dimen/radius_input"
        app:boxCornerRadiusBottomStart="@dimen/radius_input"
        app:boxCornerRadiusBottomEnd="@dimen/radius_input"
        app:startIconDrawable="@drawable/ic_user"
        app:startIconTint="@color/white"
        app:boxStrokeWidth="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_description_tittle_text"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_input_edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_semibold"
            tools:text="Jose Roberto Nasser Sanchez"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_input_layout_email"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:hint="@string/hint_input_email"
        android:textColorHint="#787575"
        android:layout_marginTop="@dimen/input_gap"
        app:boxCornerRadiusTopEnd="@dimen/radius_input"
        app:boxCornerRadiusTopStart="@dimen/radius_input"
        app:boxCornerRadiusBottomStart="@dimen/radius_input"
        app:boxCornerRadiusBottomEnd="@dimen/radius_input"
        app:startIconDrawable="@drawable/ic_email"
        app:startIconTint="@color/white"
        app:boxStrokeWidth="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_input_layout_name"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_input_edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_semibold"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_input_layout_phone"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:hint="@string/hint_input_phone"
        android:textColorHint="#787575"
        android:layout_marginTop="@dimen/input_gap"
        app:boxCornerRadiusTopEnd="@dimen/radius_input"
        app:boxCornerRadiusTopStart="@dimen/radius_input"
        app:boxCornerRadiusBottomStart="@dimen/radius_input"
        app:boxCornerRadiusBottomEnd="@dimen/radius_input"
        app:startIconDrawable="@drawable/ic_phone"
        app:startIconTint="@color/white"
        app:boxStrokeWidth="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_input_layout_email"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_input_edit_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_semibold"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_input_layout_password"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:hint="@string/hint_input_password"
        android:textColorHint="#787575"
        android:layout_marginTop="@dimen/input_gap"
        app:boxCornerRadiusTopEnd="@dimen/radius_input"
        app:boxCornerRadiusTopStart="@dimen/radius_input"
        app:boxCornerRadiusBottomStart="@dimen/radius_input"
        app:boxCornerRadiusBottomEnd="@dimen/radius_input"
        app:startIconDrawable="@drawable/ic_email"
        app:startIconTint="@color/white"
        app:boxStrokeWidth="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_input_layout_phone"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_input_edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_semibold"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_input_layout_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:hint="@string/hint_input_confirm_password"
        android:textColorHint="#787575"
        android:layout_marginTop="@dimen/input_gap"
        app:boxCornerRadiusTopEnd="@dimen/radius_input"
        app:boxCornerRadiusTopStart="@dimen/radius_input"
        app:boxCornerRadiusBottomStart="@dimen/radius_input"
        app:boxCornerRadiusBottomEnd="@dimen/radius_input"
        app:startIconDrawable="@drawable/ic_email"
        app:startIconTint="@color/white"
        app:boxStrokeWidth="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_input_layout_password"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_input_edit_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_semibold"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/action_register"
        android:layout_width="220dp"
        android:layout_height="65dp"
        android:backgroundTint="#1E1B30"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_bold"
        android:textSize="@dimen/default_text_size"
        android:text="@string/register_button_text"
        android:textColor="#FFC58F"
        app:strokeColor="#FFC58F"
        app:strokeWidth="1dp"
        app:cornerRadius="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_input_layout_confirm_password"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/register_forgot_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/minimum_gap"
        android:text="@string/login_forgot_text"
        android:textColor="#FFC58F"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/action_register"/>

</androidx.constraintlayout.widget.ConstraintLayout>