<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="190dp"
    android:layout_height="225dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="@dimen/default_gap"
    android:backgroundTint="#BF6716"
    app:cardCornerRadius="@dimen/default_gap"
    app:cardElevation="@dimen/medium_gap">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/advisory_card_img"
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:background="@color/black"
            android:contentDescription="@string/description_img_advisory"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
            android:id="@+id/card_advisory_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_llamada_telefonica"
            android:backgroundTint="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
            android:id="@+id/card_advisory_mssage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_message"
            android:backgroundTint="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_advisory_call"/>

        <TextView
            android:id="@+id/advisory_text_view_advisor_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center"
            android:background="@color/secondary_color"
            android:text="Jose Nasser"
            android:textColor="@color/primary_color"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="@dimen/tittle_text_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>