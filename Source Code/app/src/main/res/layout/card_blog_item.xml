<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="@dimen/maximum_gap"
        android:layout_marginTop="@dimen/medium_gap"
        android:layout_marginEnd="@dimen/maximum_gap"
        app:cardElevation="@dimen/default_gap"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_container">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blog_card_view_style"
            android:padding="@dimen/default_gap">

            <ImageView
                android:id="@+id/blog_img_card_view"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:background="@drawable/img_card_view_style"
                android:padding="5dp"
                android:src="@mipmap/ic_madera"
                android:contentDescription="@string/description_blog_imageview"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tittle_card_view"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/minimum_gap"
                android:layout_marginTop="-8dp"
                android:fontFamily="@font/poppins_bold"
                android:gravity="end"
                android:text="Titulo"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/maximum_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/blog_img_card_view"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tittle_description_card_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/minimum_gap"
                android:layout_marginTop="-4dp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="end"
                android:text="Subtitulo"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/tittle_text_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/blog_img_card_view"
                app:layout_constraintTop_toBottomOf="@id/tittle_card_view" />

            <TextView
                android:id="@+id/description_card_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/minimum_gap"
                android:ellipsize="end"
                android:fontFamily="@font/poppins_semibold"
                android:maxLines="4"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard ..."
                android:textColor="@color/white"
                android:textSize="@dimen/default_text_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/blog_img_card_view"
                app:layout_constraintTop_toBottomOf="@id/tittle_description_card_view" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>