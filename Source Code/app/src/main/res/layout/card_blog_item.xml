<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/maximum_gap"
    app:cardBackgroundColor="@android:color/transparent"
    android:layout_marginEnd="@dimen/maximum_gap"
    android:layout_marginTop="@dimen/medium_gap"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/header_container">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/default_gap"
        android:background="@drawable/blog_card_view_style">

        <ImageView
            android:id="@+id/blog_img_card_view"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:background="@drawable/img_card_view_style"
            android:padding="5dp"
            android:src="@mipmap/ic_madera"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tittle_card_view"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="end"
            android:layout_marginStart="@dimen/minimum_gap"
            android:layout_marginTop="-8dp"
            android:text="Titulo"
            android:fontFamily="@font/poppins_bold"
            android:textSize="@dimen/maximum_text_size"
            android:textColor="@color/primary_color"
            app:layout_constraintStart_toEndOf="@id/blog_img_card_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tittle_description_card_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginStart="@dimen/minimum_gap"
            android:layout_marginTop="-4dp"
            android:text="Subtitulo"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="@dimen/tittle_text_size"
            android:textColor="@color/primary_color"
            app:layout_constraintStart_toEndOf="@id/blog_img_card_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tittle_card_view"/>

        <TextView
            android:id="@+id/description_card_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/minimum_gap"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard ..."
            android:maxLines="4"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@id/blog_img_card_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tittle_description_card_view"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>