<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/header_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginStart="-90dp"
            android:layout_marginTop="-120dp"
            android:backgroundTint="#FFC58F"
            app:cardCornerRadius="125dp"
            app:cardElevation="@dimen/default_gap"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_secondary" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginEnd="-90dp"
            android:layout_marginBottom="-120dp"
            android:backgroundTint="#FFC58F"
            app:cardCornerRadius="125dp"
            app:cardElevation="@dimen/default_gap"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_secondary" />

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/informative_map_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/minimum_gap"
            android:elevation="20dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="@string/informative_map_title"
            android:textColor="@color/primary_color"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/action_return"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/default_gap"
            android:layout_marginTop="@dimen/default_gap"
            android:background="@drawable/return_button_style"
            android:contentDescription="@string/description_return_arrow"
            android:elevation="20dp"
            android:src="@drawable/ic_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/user_profile_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_photo_style"
        android:layout_marginTop="@dimen/maximum_gap"
        android:contentDescription="@string/description_profile_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_container"/>
    
    <ImageButton
        android:id="@+id/action_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_upload_style"
        android:src="@drawable/ic_edit"
        app:layout_constraintStart_toEndOf="@id/user_profile_img"
        app:layout_constraintBottom_toBottomOf="@id/user_profile_img"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/profile_input_layout_email"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:hint="@string/hint_input_email"
        android:textColorHint="#787575"
        android:layout_marginTop="@dimen/maximum_gap"
        android:layout_marginStart="@dimen/maximum_gap"
        android:layout_marginEnd="@dimen/maximum_gap"
        app:boxCornerRadiusTopEnd="@dimen/radius_input"
        app:boxCornerRadiusTopStart="@dimen/radius_input"
        app:boxCornerRadiusBottomStart="@dimen/radius_input"
        app:boxCornerRadiusBottomEnd="@dimen/radius_input"
        app:startIconDrawable="@drawable/ic_email"
        app:startIconTint="@color/white"
        app:boxStrokeWidth="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/user_profile_img"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/profile_input_edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_semibold"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/profile_input_layout_password"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:hint="@string/hint_input_password"
        android:textColorHint="#787575"
        android:layout_marginTop="@dimen/minimum_gap"
        android:layout_marginStart="@dimen/maximum_gap"
        android:layout_marginEnd="@dimen/maximum_gap"
        app:boxCornerRadiusTopEnd="@dimen/radius_input"
        app:boxCornerRadiusTopStart="@dimen/radius_input"
        app:boxCornerRadiusBottomStart="@dimen/radius_input"
        app:boxCornerRadiusBottomEnd="@dimen/radius_input"
        app:startIconDrawable="@drawable/ic_lock"
        app:startIconTint="@color/white"
        app:boxStrokeWidth="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_input_layout_email"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/recovery_input_edit_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_semibold"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/profile_input_layout_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:hint="@string/hint_input_confirm_password"
        android:textColorHint="#787575"
        android:layout_marginTop="@dimen/minimum_gap"
        android:layout_marginStart="@dimen/maximum_gap"
        android:layout_marginEnd="@dimen/maximum_gap"
        app:boxCornerRadiusTopEnd="@dimen/radius_input"
        app:boxCornerRadiusTopStart="@dimen/radius_input"
        app:boxCornerRadiusBottomStart="@dimen/radius_input"
        app:boxCornerRadiusBottomEnd="@dimen/radius_input"
        app:startIconDrawable="@drawable/ic_lock"
        app:startIconTint="@color/white"
        app:boxStrokeWidth="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_input_layout_password"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/recovery_input_edit_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_semibold"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/action_change"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:backgroundTint="@color/primary_color"
        android:text="@string/profile_save_changes_button_text"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/secondary_color"
        android:textSize="@dimen/default_text_size"
        android:letterSpacing="-0.0001"
        app:strokeColor="@color/secondary_color"
        app:strokeWidth="2dp"
        app:layout_constraintStart_toStartOf="@id/profile_input_layout_confirm_password"
        app:layout_constraintTop_toBottomOf="@id/profile_input_layout_confirm_password"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/action_delete"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:backgroundTint="@color/primary_color"
        android:text="@string/profile_delete_button_text"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/secondary_color"
        android:textSize="@dimen/default_text_size"
        android:letterSpacing="-0.0001"
        app:strokeColor="@color/secondary_color"
        app:strokeWidth="2dp"
        app:layout_constraintEnd_toEndOf="@id/profile_input_layout_confirm_password"
        app:layout_constraintTop_toBottomOf="@id/profile_input_layout_confirm_password"/>

    <include
        android:id="@+id/user_profile_bottom_tablayout"
        layout="@layout/bottom_navigation_menu"/>

</androidx.constraintlayout.widget.ConstraintLayout>