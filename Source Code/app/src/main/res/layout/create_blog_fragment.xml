<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/header_style"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="-120dp"
            android:layout_marginStart="-90dp"
            android:backgroundTint="#FFC58F"
            app:cardElevation="@dimen/default_gap"
            app:cardCornerRadius="125dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_secondary"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginEnd="-90dp"
            android:layout_marginBottom="-120dp"
            android:backgroundTint="#FFC58F"
            app:cardElevation="@dimen/default_gap"
            app:cardCornerRadius="125dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" >

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_secondary"/>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/create_blog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="@dimen/maximum_gap"
            android:text="@string/create_blog_title"
            android:fontFamily="@font/poppins_bold"
            android:textSize="36sp"
            android:textColor="@color/primary_color"
            android:elevation="20dp"
            android:shadowColor="@color/primary_color"
            android:shadowDy="10"
            android:shadowDx="10"
            android:shadowRadius="15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="-8dp"
            android:text="@string/create_blog_title_description"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="@dimen/default_text_size"
            android:textColor="@color/white"
            android:elevation="20dp"
            android:shadowColor="@color/primary_color"
            android:shadowDy="10"
            android:shadowDx="10"
            android:shadowRadius="15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/create_blog_title"/>

        <ImageButton
            android:id="@+id/action_return"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_arrow"
            android:background="@drawable/return_button_style"
            android:layout_marginTop="@dimen/default_gap"
            android:layout_marginStart="@dimen/default_gap"
            android:contentDescription="@string/description_return_arrow"
            android:elevation="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/medium_gap"
        android:layout_marginTop="@dimen/medium_gap"
        android:layout_marginEnd="@dimen/medium_gap"
        android:layout_marginBottom="80dp"
        android:backgroundTint="#A72929"
        app:cardElevation="@dimen/default_gap"
        app:cardCornerRadius="@dimen/minimum_gap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_container">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/create_blog_text_input_layout_title"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium_gap"
                android:layout_marginTop="@dimen/default_gap"
                android:layout_marginEnd="@dimen/medium_gap"
                android:hint="@string/create_blog_hint_title"
                android:textColorHint="@color/primary_color"
                app:boxBackgroundColor="@color/secondary_color"
                app:boxCornerRadiusBottomEnd="@dimen/default_gap"
                app:boxCornerRadiusBottomStart="@dimen/default_gap"
                app:boxCornerRadiusTopEnd="@dimen/default_gap"
                app:boxCornerRadiusTopStart="@dimen/default_gap"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="3dp"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:hintTextColor="@color/primary_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_blog_text_input_edit_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/primary_color"
                    android:textSize="@dimen/default_text_size"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/create_blog_text_input_layout_subtitle"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium_gap"
                android:layout_marginTop="@dimen/default_gap"
                android:layout_marginEnd="@dimen/medium_gap"
                android:hint="@string/create_blog_hint_subtitle"
                android:textColorHint="@color/primary_color"
                app:boxBackgroundColor="@color/secondary_color"
                app:boxCornerRadiusBottomEnd="@dimen/default_gap"
                app:boxCornerRadiusBottomStart="@dimen/default_gap"
                app:boxCornerRadiusTopEnd="@dimen/default_gap"
                app:boxCornerRadiusTopStart="@dimen/default_gap"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="3dp"
                app:expandedHintEnabled="true"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:hintTextColor="@color/primary_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/create_blog_text_input_layout_title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_blog_text_input_edit_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/primary_color"
                    android:textSize="@dimen/default_text_size" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/create_blog_text_input_layout_description"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium_gap"
                android:layout_marginTop="@dimen/default_gap"
                android:layout_marginEnd="@dimen/medium_gap"
                android:hint="@string/create_blog_hint_description"
                android:textColorHint="@color/primary_color"
                app:boxBackgroundColor="@color/secondary_color"
                app:boxCornerRadiusBottomEnd="@dimen/default_gap"
                app:boxCornerRadiusBottomStart="@dimen/default_gap"
                app:boxCornerRadiusTopEnd="@dimen/default_gap"
                app:boxCornerRadiusTopStart="@dimen/default_gap"
                app:boxStrokeColor="@color/white"
                app:boxStrokeWidth="3dp"
                app:hintAnimationEnabled="true"
                app:hintEnabled="true"
                app:hintTextColor="@color/primary_color"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/create_blog_text_input_layout_subtitle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_blog_text_input_edit_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/primary_color"
                    android:textSize="@dimen/default_text_size" />

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/create_blog_img_card_view"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="@dimen/default_gap"
                android:contentDescription="@string/description_blog_image"
                android:src="@drawable/ic_image"
                app:layout_constraintBottom_toBottomOf="@id/action_upload"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/action_upload"
                app:layout_constraintTop_toTopOf="@id/action_upload" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_upload"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="@dimen/maximum_gap"
                android:text="@string/create_blog_upload_text"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/create_blog_text_input_layout_description"
                app:strokeColor="@color/white"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_share"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:backgroundTint="#FFAC5F"
                android:layout_marginBottom="@dimen/medium_gap"
                android:text="@string/create_blog_share_button_text"
                android:textColor="@color/white"
                app:strokeColor="@color/white"
                app:strokeWidth="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/bottom_navigation_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>